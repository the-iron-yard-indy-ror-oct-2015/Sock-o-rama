<!-- gif Modal -->
<div class="modal fade" id="add-sock-modal" tabindex="-1" role="dialog" aria-labelledby="AddSockLabel">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="add-sock-title" id="AddSockLabel">Add Sock</h4>
    </div>

    <div class="modal-body">
      <%=bootstrap_form_for(@sock, remote: true) do |f|%>
        <div class="field">
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.text_field :img_url %>
        </div>
        <div class= "col-xs-4">
          <div class="field">
            <%= f.text_field :style %>
          </div>
        </div>
        <div class= "col-xs-4">
          <div class="field">
            <%= f.select :material, ["Acrylic","Alpaca","Cotton","Fleece","Rayon","Silk","Wool","Yak Hair"] %>
          </div>
        </div>
        <div class= "col-xs-4">
          <div class="field">
             <%= f.select :color, ['Red','Orange',"Yellow","Green","Blue","Purple","Grey","Khaki","Black","Patterned"]  %>
          </div>
        </div>
        <div class="form-group">
        <div class= "col-xs-4">
         <label>Amount</label>
            <div class="input-group">
             <div class="input-group-addon">$</div>
             <input type="float" class="form-control" id="exampleInputAmount" placeholder="Dollars">
            </div>
          </div>
        </div>
        <div class= "col-xs-4">
          <div class="field">
            <%= f.text_field :inventory, placeholder: "ID #" %>
          </div>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Add Sock!", class: "btn btn-primary btn-lg", id: "add-button"%>
        </div>
        <br>
      <%end%>
    </div>

</div>
</div>
</div>
