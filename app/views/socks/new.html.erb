<h2> Add a New Sock!</h2>

<%=bootstrap_form_for(@sock, remote: true) do |f|%>
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :img_url %>
  </div>
  <div class="field">
    <%= f.text_field :style %>
  </div>
  <div class="field">
    <%= f.text_field :material %>
  </div>
  <div class="field">
    <%= f.text_field :color %>
  </div>
  <div class="form-group">
  <div class= "col-xs-5">
   <label>Amount</label>
      <div class="input-group">
       <div class="input-group-addon">$</div>
       <input type="float" class="form-control" id="exampleInputAmount" placeholder="Dollars">
       <div class="input-group-addon">.00</div>
      </div>
    </div>
  </div>
  <div class= "col-xs-5">
    <div class="field">
      <%= f.text_field :inventory, placeholder: "ID #" %>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Add Sock!", class: "btn btn-primary btn-lg" %>
  </div>
<%end%>
